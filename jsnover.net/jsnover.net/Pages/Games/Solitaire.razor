@page "/solitaire"
@inject jsnover.net.Infrastructure.Services.CardService cardService
@using jsnover.net.Models
@using jsnover.net.Components

@if (BeforeGame)
{    
    <h1>Check Back Soon!</h1>
    @*<button class="btn btn-primary" @onclick="NewGame">New Game</button>*@
}
else
{
    <SolitaireBoard Dealer="Dealer">

    </SolitaireBoard>
}


@code {
    private bool BeforeGame { get; set; } = true;
    private Dictionary<string, List<Card>> Dealer { get; set; }

    private async Task NewGame()
    {
        Dealer = await cardService.CreateSolitaireDictionary();
        BeforeGame = false;
        StateHasChanged();
    }

}